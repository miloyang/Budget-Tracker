<div class="row text-blue-100 font-bold relative">
  <div class="col-auto text-lg">
    <h1>Welcome, {{user.username}}!</h1>
  </div>
</div>

<div class="row mt-4 text-blue-100 font-bold relative">
  <div class="col-md-6">
    <h2 class="text-xlg">Create a New Project:</h2>

    <form class="form new-project-form">
      <div class="form-group">
        <label for="project-name" class="text-yellow-100 font-bold">Project Name:</label>
        <input class="form-input" type="text" id="project-name" name="project-name" />
      </div>
      <div class="form-group">
        <label for="project-desc" class="text-yellow-100 font-bold">Description:</label>
        <textarea class="form-input" id="project-desc" name="project-desc"></textarea>
      </div>
      <div class="form-group">
        <label for="project-difficulty"class="text-yellow-100 font-bold">Difficulty</label><br>
        <input type="radio" id="difficulty" name="diff" value="Easy">
        <label for="diff1" class="text-green-400">Easy</label><br>
        <input type="radio" id="difficulty" name="diff" value="Medium">
        <label for="diff2" class="text-yellow-600">Medium</label><br>
        <input type="radio" id="difficulty" name="diff" value="Hard">

        <label for="diff3">Hard</label><br>
        <input type="radio" id="difficulty" name="diff" value="Expert">
        <label for="diff3">Expert</label><br>

      </div>
      <div class="form-group">
        <label for="materials" class="text-yellow-100 font-bold">Materials Required:</label>
        <textarea class="form-input" id="materials" name="materials"></textarea>
      </div>
      <div class="form-group">
        <label for="budget" class="text-yellow-100 font-bold">BudgetðŸ’°:</label>
        <input class="form-input" type="number" id="budget" name="budget" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if user.projects.length}}
  <div class="col-md-6 project-list">
    <h3>Current Projects:</h3>

    {{#each user.projects as |project|}}
    <div class="row mb-2">
      <div class="col-md-8 text-yellow-100 font-bold">
        <h4><a href="/project/{{project.id}}">{{project.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{project.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../js/profile.js" ></script>
